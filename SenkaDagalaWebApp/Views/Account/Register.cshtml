@model RegisterVM
<section class="vh-100 pt-5" style="background-color: #eee;">
    <div class="container h-100 pt-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11 pt-5">
                <div class="card text-black pt-5" style="border-radius: 25px;">
                    <div class="card-body pt-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1 pt-5">

                                <p class="text-center h1 fw-bold pt-5">Sign up</p>

                                <form class="mx-1 mx-md-4 pt-5" method="post" >
                                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Name" class="form-control form-control-lg" />
                                            <label class="form-label" asp-for="Name">First Name</label>
                                            <span class="text-danger" asp-validation-for="Name"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Surname" class="form-control form-control-lg" />
                                            <label class="form-label" asp-for="Surname">Last Name</label>
                                            <span class="text-danger" asp-validation-for="Surname"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="UserName" class="form-control form-control-lg" />
                                            <label class="form-label" asp-for="UserName">User Name</label>
                                            <span class="text-danger" asp-validation-for="UserName"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Email" class="form-control form-control-lg" />
                                            <label class="form-label" asp-for="Email">Email address</label>
                                            <span class="text-danger" asp-validation-for="Email"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Password" class="form-control form-control-lg" />
                                            <label class="form-label" asp-for="Password"> Pasword</label>
                                            <span class="text-danger" asp-validation-for="Password"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="ConfrimPassword" class="form-control form-control-lg" />
                                            <label class="form-label" asp-for="ConfrimPassword">Confrim Pasword</label>
                                            <span class="text-danger" asp-validation-for="ConfrimPassword"></span>
                                        </div>
                                    </div>

                                    <div class="form-check d-flex justify-content-center mb-5">
                                        <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3c" />
                                        <label class="form-check-label" for="form2Example3">
                                            I agree all statements in <a href="#!">Terms of service</a>
                                        </label>
                                    </div>

                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-primary btn-lg">Register</button>
                                    </div>

                                </form>

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                     class="img-fluid" alt="Sample image">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>